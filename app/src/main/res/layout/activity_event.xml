<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.info.EventActivity">
    
    <LinearLayout
        android:id="@+id/layout_search_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:elevation="4dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#7293C1"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="검색 창"
                android:paddingHorizontal="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#E0E0E0"
                android:textSize="12sp"
                android:autofillHints="none"
                android:inputType="text"
                android:drawableEnd="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                app:drawableTint="#FFFFFF" />
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/iv_top_scrap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_bookmark_24"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="스크랩한 행사 보기" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_filter_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/arrow_down_float"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:contentDescription="상세 검색 필터 열기"
            app:tint="#000000"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="상세 검색 조건 설정"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/iv_filter_reset"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="검색 조건 초기화"
            app:tint="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:text="나이"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
            
            <EditText
                android:id="@+id/et_age"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:layout_marginStart="5dp"  />

            <TextView
                android:text="지역"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_city"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="수원시 또는 수원"
                android:layout_marginStart="5dp"
                android:textSize="12sp" />
            
            <Button
                android:id="@+id/btn_filter_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="조회"
                android:layout_marginStart="10dp"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/table_line"    />
    
    <LinearLayout
        android:id="@+id/table_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/table_line" />
        <TextView
            android:text="스크랩"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="10sp"
            android:textStyle="bold" />

        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/table_line" />
        <TextView
            android:text="제목"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/table_line" />
        <TextView
            android:text="주관 기관"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/table_line" />
        <TextView
            android:text="마감일"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />
        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/table_line" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/table_line"    />

    <TextView
        android:id="@+id/tv_no_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="조건에 맞는 결과가 없습니다."
        android:visibility="gone"
        android:gravity="center|center_vertical"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_event_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:background="#FFFFFF"
        tools:listitem="@layout/item_event" />

</LinearLayout>